
if joystick1.Pov1x = 1.0 then
  keyboard.Left = 0
  keyboard.Right = 1
else if joystick1.Pov1x = -1.0 then
  keyboard.Left = 1
  keyboard.Right = 0
else
  keyboard.Left = 0
  keyboard.Right = 0
endif

if joystick1.Pov1y = 1.0 then
  keyboard.Up = 0
  keyboard.Down = 1
else if joystick1.Pov1y = -1.0 then
  keyboard.Up = 1
  keyboard.Down = 0
else
  keyboard.Up = 0
  keyboard.Down = 0
endif

keyboard.Space = joystick1.Button1
